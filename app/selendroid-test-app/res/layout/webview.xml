<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@id/webviewTable" android:layout_width="fill_parent" android:layout_height="fill_parent" android:stretchColumns="*" android:shrinkColumns="*"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow android:gravity="center_horizontal" android:id="@id/tableHeader" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Web View Interaction" />
    </TableRow>
    <TableRow android:id="@id/tableRowButtons" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <view android:id="@id/spinner_webdriver_test_data" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/prompt_webdriverHtmlTestFile" class="io.selendroid.testapp.view.SelendroidSpinner" />
        <Button android:id="@id/goBack" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Go to home screen" android:onClick="showHomeScreenDialog" />
    </TableRow>
    <TableRow android:gravity="center_horizontal" android:id="@id/tableRowWebview" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <WebView android:id="@id/mainWebView" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="0.7" />
    </TableRow>
</TableLayout>